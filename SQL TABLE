CREATE TABLE Verblijf (
                          verblijfID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
                          naam VARCHAR(100) NOT NULL,
                          beschrijving TEXT,
                          poortopen bit NOT NULL
);

CREATE TABLE Dier (
                      dierID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
                      typedier VARCHAR(50) NOT NULL,
                      naam VARCHAR(100) NOT NULL,
                      verblijfID INT,
                      notitie TEXT,
                      FOREIGN KEY (verblijfID) REFERENCES Verblijf(verblijfID)
);

CREATE TABLE Werknemer (
                           werknemerID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
                           naam VARCHAR(100) NOT NULL,
                           functie VARCHAR(100) NOT NULL
);

CREATE TABLE SchoonMaakBeurt (
                                 schoonmaakID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
                                 tijdstip DATETIME NOT NULL,
                                 verblijfID INT NOT NULL,
                                 voltooid bit NOT NULL,
                                 FOREIGN KEY (verblijfID) REFERENCES Verblijf(verblijfID)
);

CREATE TABLE SchoonmaakWerknemer (
                                     schoonmaakID INT NOT NULL,
                                     werknemerID INT NOT NULL,
                                     PRIMARY KEY (schoonmaakID, werknemerID),
                                     FOREIGN KEY (schoonmaakID) REFERENCES SchoonMaakBeurt(schoonmaakID),
                                     FOREIGN KEY (werknemerID) REFERENCES Werknemer(werknemerID)
);

CREATE TABLE VoerBeurt (
                           voerbeurtID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
                           typevoer VARCHAR(50) NOT NULL,
                           hoeveelheidVoer DECIMAL(6,2) NOT NULL,
                           tijdstip DATETIME NOT NULL,
                           verblijfID INT NOT NULL,
                           voltooid bit not null,
                           FOREIGN KEY (verblijfID) REFERENCES Verblijf(verblijfID)
);

CREATE TABLE VoerBeurtWerknemer (
                                    voerbeurtID INT NOT NULL ,
                                    werknemerID INT NOT NULL ,
                                    PRIMARY KEY (voerbeurtID, werknemerID),
                                    FOREIGN KEY (voerbeurtID) REFERENCES VoerBeurt(voerbeurtID),
                                    FOREIGN KEY (werknemerID) REFERENCES Werknemer(werknemerID)
);
